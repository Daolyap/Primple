<Window x:Class="Primple.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Primple" Height="800" Width="1200"
        Icon="Assets/favicon.ico"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">
    
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1" CornerRadius="0" CaptionHeight="40" ResizeBorderThickness="4"/>
    </WindowChrome.WindowChrome>

    <Border Background="{DynamicResource AppBackgroundBrush}" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" BorderBrush="{DynamicResource GlassBorderBrush}" BorderThickness="0,0,1,0" Background="#10FFFFFF">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Assets/logo.png" Width="32" Height="32" Margin="0,0,12,0"/>
                        <TextBlock Text="Primple" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="15,20">
                        <TextBlock Text="TOOLS" Foreground="#88FFFFFF" FontSize="10" FontWeight="Bold" Margin="10,0,0,10"/>
                        <RadioButton Style="{DynamicResource NavButtonStyle}" IsChecked="True" Content="Home" Tag="Home"/>
                        <RadioButton Style="{DynamicResource NavButtonStyle}" Content="Map to 3D" Tag="Maps"/>
                        <RadioButton Style="{DynamicResource NavButtonStyle}" Content="Image to 3D" Tag="ImageTo3d"/>
                        <RadioButton Style="{DynamicResource NavButtonStyle}" Content="Templates" Tag="Templates"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="20">
                        <TextBlock Text="v1.0.0" Foreground="#44FFFFFF" FontSize="10" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title Bar (Draggable) -->
                <Grid Grid.Row="0" Background="#15FFFFFF">
                    <TextBlock Text="Primple" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" Margin="15,0,0,0" 
                               MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="─" Width="40" Height="40" Style="{DynamicResource GlassButtonStyle}" 
                                Click="MinimizeButton_Click" FontSize="16" Padding="0" Margin="0"/>
                        <Button Content="□" Width="40" Height="40" Style="{DynamicResource GlassButtonStyle}" 
                                Click="MaximizeButton_Click" FontSize="16" Padding="0" Margin="0"/>
                        <Button Content="✕" Width="40" Height="40" Style="{DynamicResource GlassButtonStyle}" 
                                Click="CloseButton_Click" FontSize="16" Padding="0" Margin="0"/>
                    </StackPanel>
                </Grid>

                <!-- View Content -->
                <ContentControl x:Name="MainContent" Grid.Row="1" Margin="20"/>
            </Grid>
        </Grid>
    </Border>
</Window>
